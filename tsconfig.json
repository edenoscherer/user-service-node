{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es2020",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "tests",
    "jest.config.ts"
  ]
}